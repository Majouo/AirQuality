<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="false"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/indexName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="IndexName"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/indexDesc"
        app:layout_constraintEnd_toEndOf="@+id/indexDesc"
        app:layout_constraintStart_toStartOf="@+id/indexDesc" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="109dp"
        android:layout_height="102dp"
        android:layout_marginStart="24dp"
        android:indeterminateOnly="false"
        android:max="6"
        android:progressDrawable="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/indexDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IndexDesc"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progressBar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Km"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/indexDesc"
        app:layout_constraintStart_toStartOf="@+id/indexDesc"
        app:layout_constraintTop_toBottomOf="@+id/indexDesc" />

</androidx.constraintlayout.widget.ConstraintLayout>